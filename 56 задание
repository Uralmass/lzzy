<?php

namespace HexletBasics\Conditionals\SwitchStatement;

// BEGIN (write your solution here)
function getNumberExplanation($number)
{
    switch ($number){
        case 7:
        return 'prime number';
        case 42:
        return 'answer for everything';
        case 666:
        return 'devil number';
        default:
        return null;
    }
}
// END
